arr = [7, 5, 2, 7, 8, -2, 25, 25]
#arr=[9,8,7,24,-4,5,-1]
print("given arr: ",arr)

def altenateSort(arr):
    n=len(arr)
    arr.sort(reverse=True)
    print("sorted arr: ",arr)
    start=0
    end=len(arr)-1
    while(start<end):
        print( arr[start],end=" ")
        start+=1
        print(arr[end],end=" ")
        end-=1
        
    if (n % 2 !=0):
        print(arr[start])
    
altenateSort(arr)
        
